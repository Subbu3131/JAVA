import java.util.Scanner;
public class Main {
    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
        System.out.print("Enter Your Password Please :");
        String password = input.nextLine();
        boolean length = false;
        boolean upper = false;
        boolean lower = false;
        boolean digit = false;
        boolean special = false;
        for (char c : password.toCharArray()){
            if (Character.isUpperCase(c)) {
                upper = true;
            }
            else if (Character.isLowerCase(c)) {
                lower = true;
            } else if ("!@#$%^&*".indexOf(c)!=-1) {
                special = true;
            }else if (Character.isDigit(c)){
                digit = true;
            }
        }
        if (password.length()>=8){
            length=true;
        }
        if (length && lower && upper && digit && special){
            System.out.println("Strong Password");
        }
        if (!length){
            System.out.println("Your Password Should Be More than 8 Charecters");
        } else if (!lower) {
            System.out.println("Your password must contain a lower case");
        }else if (!upper){
            System.out.println("Your password must contain a uppercase");
        } else if (!digit) {
            System.out.println("Your password must contain a digit");
        } else if (!special) {
            System.out.println("Your password must contain a special charecter (!@#$%^&*)");
        }
        input.close();
    }
}
