public class Main {
    public static void main(String[] args){
        Random input = new Random();
        Scanner inp = new Scanner(System.in);
        String pass = "";
        System.out.println("Enter How Many Digits Password To Be Generated: ");
        int digits = inp.nextInt();

        for (int i =0 ; i < digits ; i++){
            char Password =(char) ('a' + input.nextInt(26));
            pass = pass + Password;

        }
        System.out.println("THE GENERATED PASSWORD IS: "+ pass);
    }
}
